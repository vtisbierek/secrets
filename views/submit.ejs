<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets</h1>
    <p class="secret-text">Don't keep your secrets, share them anonymously!</p>

    <form action="/submit" method="POST">
      <div class="form-group">
        <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?" id="newSecretInput">
      </div>
      <a class="btn btn-light" href="/secrets" role="button">Nevermind</a>
      <button type="submit" class="btn btn-dark" onClick="return checkEmpty()">Submit</button>
    </form>

  </div>
</div>

<script>
  function checkEmpty() {          
      const inputEntry = $("#newSecretInput");
      
      if (inputEntry && inputEntry.val()) {
          return true;    
      } else{
          alert("You must write your secret to post.");
          return false;
      }
  }
</script>
